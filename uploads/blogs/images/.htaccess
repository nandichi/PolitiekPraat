# Beveiligingsregels voor uploads
Options -Indexes
Options -ExecCGI
AddHandler cgi-script .php .pl .py .jsp .asp .sh .cgi

# Afbeeldingen toestaan (Apache 2.4 syntax)
<FilesMatch "\.(jpg|jpeg|png|gif|webp|svg)$">
    Require all granted
</FilesMatch>

# Audio bestanden toestaan
<FilesMatch "\.(mp3|wav|ogg)$">
    Require all granted
</FilesMatch>

# Video bestanden toestaan
<FilesMatch "\.(mp4|webm|ogg|avi|mov)$">
    Require all granted
</FilesMatch>

# PHP bestanden blokkeren
<FilesMatch "\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|sh|cgi)$">
    Require all denied
</FilesMatch>
