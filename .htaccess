# Basis instellingen
DirectoryIndex index.php
Options -Indexes

# Rewrite engine aanzetten
RewriteEngine On
RewriteBase /

# Voorkom directe toegang tot includes directory
RewriteRule ^includes/ - [F,L]

# Voorkom directe toegang tot views directory
RewriteRule ^views/ - [F,L]

# Route voor thema pagina's
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^thema/([^/]+)/?$ controllers/thema.php?slug=$1 [L,QSA]

# Stuur alle overige verzoeken naar index.php
RewriteRule ^(.*)$ index.php [L,QSA]

# Bestandsrechten
<Files ~ "\.(php|css|js|jpg|jpeg|png|gif|ico)$">
    Require all granted
</Files> 